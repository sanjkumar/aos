<p id="notice"><%= notice %></p>
<%= form_tag products_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search_query, params[:search_query] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>

<div id="product_list">
  <h1>Product List</h1>

    <% @products.each do |product| %>
        <div class="entry">
            <%= product.name %>
        </div>
      <div>
            <%= image_tag(product.image_url, :class => 'list_image') %>
            <%= product.weight %>
          </div>

        <div class="price_line">

        </div>

          <div class="list_description">
              <%= truncate(strip_tags(product.description), :truncate => 80) %>
          </div>

           <td><%= product.user_id %></td>
          <div class="list_actions">
            <%= link_to 'Show', product %>
            <br/>
            <%= link_to 'Edit', edit_product_path(product) %>
            <br/>
            <%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %>
          <tr><%= button_to 'Add to Cart', line_items_path(:product_id => product) %></tr>
            <%= link_to "Your Cart", :controller => "carts", :action => "your_cart" %>
          </div>

    <% end %>
  </table>
</div>
<br/>

<%= link_to 'New product', new_product_path %>
